describe('Start', () => {
  let instance;

  beforeAll(() => {
    process.env = {};
  });

  afterEach(() => {
    process.env = {};
    start = undefined;
    jest.resetModules();
  });

  describe('Vanilla', () => {
    beforeEach(() => {
      process.env.STATIC_PATH = 'public/vanilla';
      process.env.PORT = '8111';
      instance = require('../start.js');
    });

    test('Returned function returns app server', (done) => {
      expect(instance.constructor.name).toEqual('Server');
      instance.close(() => {
        done();
      });
    });
  });
});
